doctype html
block vars
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title=title

    if description
      meta(name='description', content=description)

    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700%7CLato:400,900')
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css")
    link(rel='stylesheet', href=baseUrl + 'css/app.css')
    link(rel='icon', href=baseUrl + 'favicon.ico?v=3')

    block head
    include twilight

  body(class=bodyClass)
    nav.global
      a.logo(href=baseUrl)
        h1
          span.word.word-f F
            span.letters reshmen
          span.word.word-o O
            span.letters rientation
          span.word.word-p P
            span.letters rojects
          span.year 2018

      button.btn.menu-btn
        i.fa.fa-bars(aria-hidden='true')
        span.sr-only Open Menu

      button.btn.show-menu
        span.label Show Menu
        i.fa.fa-chevron-right(aria-hidden='true')

      .full-only
        ul.nav
          li: a.btn.btn-white(href=url('fsc'))
            abbr(title='Freshmen Social Camp') FSC
          li: a.btn.btn-white(href=url('fow'))
            abbr(title='Freshmen Orientation Week') FOW
          li: a.btn.btn-white(href=url('rag'))
            span RAG
          li: a.btn.btn-white(href=url('flag'))
            span FLAG
          li: a.btn.btn-white(href=url('bash'))
            span BASH

    block header

    block main

    footer.global
      div.bottom-call
        p.block-text.text-center
          | What are you waiting for? Sign up for FOP now!
        div.call.dark
          a.btn.btn-primary.btn-lg(href='http://tiny.cc/FOP2018', target='_blank')
            | Alright, count me in!

      p.icons
        a(href='mailto:fop@nuscomputing.com')
          i.fa.fa-envelope(aria-hidden='true')
          span.label Email Us
        a(href='https://www.youtube.com/channel/UCu-OQvWHAVHtZZ_1U5ODhAg')
          i.fa.fa-youtube(aria-hidden='true')
          span.label Our YouTube Channel
        a(href='https://www.facebook.com/SoCFOP/')
          i.fa.fa-facebook-official(aria-hidden='true')
          span.label Follow us on Facebook
        a(href='https://www.instagram.com/socfop')
          i.fa.fa-instagram(aria-hidden='true')
          span.label Follow us on Instagram
        a(href='https://github.com/NUSComputingDev/freshmen.nuscomputing.com')
          i.fa.fa-github(aria-hidden='true')
          span.label Fork this on GitHub

      .copyright
        p
          | A project by
          a(href='http://nuscomputing.com') NUS Students' Computing Club
          | . Last updated
          time(title=moment().format()) #{moment().format('MMM D YYYY, h:mm:ssa')}.
        p
          | Site designed and coded by
          a(href='https://github.com/ZhangYiJiang/') Zhang Yi Jiang,
          | and maintained by the NUS Students' Computing Club IT cell.
          br
          | Video editing by Wang Xien Dong.
          | Logo design by Choo Wenxin.

    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js')

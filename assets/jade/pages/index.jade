  - var bodyClass = 'index';
  - var description = 'NUS School of Computing Freshmen Orientation Projects presents Virtutem Quattor. Join us to experience a summer like never before!'; 
    
block header
  .hero
    .content
      h1
        | Sign ups are open now
        br
        | Join us for a summer of smiles
      .call
          a.btn.btn-primary.btn-lg(href='http://tiny.cc/FOP2017', target='_blank')
            | Sign up for FOP here
          a.btn.btn-primary.btn-lg(href='https://www.facebook.com/SoCFOP/', target='_blank')
            | Like us on Facebook
    .video-overlay(data-video=baseUrl + 'video/background.mp4')
